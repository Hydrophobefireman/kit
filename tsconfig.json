{
  "compilerOptions": {
    "module": "ESNext",
    "alwaysStrict": true,
    "declaration": true,
    "incremental": true,
    "target": "ESNext",
    "rootDir": ".",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@hydrophobefireman/ui-lib",
    "paths": {
      "@hydrophobefireman/kit": ["./src/index"],
      "@hydrophobefireman/kit/*": ["./packages/*/src"]
    }
  },
  "exclude": ["node_modules"]
}
